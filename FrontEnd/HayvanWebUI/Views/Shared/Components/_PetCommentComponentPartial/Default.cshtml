
@model List<GetAllPetCommentDto>

<h4 class="mb-4">Yorumlar (@Model.Count)</h4>

<div class="scrollable-comments" id="commentList" style="max-height: 400px; overflow-y: auto; ">
    @foreach (var comment in Model)
    {
        <div class="comment mb-3">
            <div class="d-flex">
                <img src="@comment.UserImageUrl" class="user-avatar-sm me-3" alt="@comment.UserName">
                <div>
                    <h6 class="mb-1">
                        <a href="/User/Profile?id=@comment.UserId" class="text-decoration-none">
                            @comment.UserName
                        </a>
                    </h6>
                    <p class="text-muted small">@comment.CreatedDate.ToString("dd MMM yyyy")</p>
                    <p>@comment.CommentText</p>
                </div>
            </div>
        </div>
    }
</div>
