    @foreach (var claim in User.Claims)
    {
        <li>@claim.Type = @claim.Value</li>
    }
</ul>

<!-- Featured Pets Section -->
@await Component.InvokeAsync("_FeaturedPetsComponentPartial")
<!-- Info Section -->
@await Component.InvokeAsync("_InfoComponentPartial")
<!-- Success Stories Section -->
@await Component.InvokeAsync("_SuccessStroriesComponentPartial")







